# Solana RPC Configuration
RPC_URL=https://api.mainnet-beta.solana.com
RPC_URL_WS=wss://api.mainnet-beta.solana.com

# Wallet Configuration
WALLET_PRIVATE_KEY=

# Jupiter API Configuration
# Public quote API endpoint (no authentication required for scan mode)
# If DNS resolution fails, you may need to use a different endpoint or configure DNS
JUPITER_API_URL=https://quote-api.jup.ag/v6
# Optional: Jupiter API key for authenticated requests (enables use of api.jup.ag endpoints)
JUPITER_API_KEY=

# Risk Management
# All absolute limits are in USDC for consistency
MAX_POSITION_SIZE_PERCENT=10.0
MAX_POSITION_SIZE_ABSOLUTE=1.0  # in SOL (converted to USDC using SOL_PRICE_USDC)
SOL_PRICE_USDC=100.0  # SOL price in USDC for limit conversion
MIN_PROFIT_USDC=0.1  # PRIMARY: minimum profit in USDC (absolute)
MIN_PROFIT_BPS=50  # SECONDARY: optional filter (set to 0 to disable)
MAX_SLIPPAGE_BPS=50  # Maximum allowed slippage (limit for risk check)
SLIPPAGE_BPS=50  # Slippage used in Jupiter API requests (must be <= MAX_SLIPPAGE_BPS)
MAX_ACTIVE_POSITIONS=1

# Priority Fee
PRIORITY_FEE_LAMPORTS=10000
USE_JITO=false

# Diagnostic Mode: set to true to test Jupiter route capability (temporary diagnostic helper)
# Makes one direct request SOL â†’ USDC with relaxed parameters
DIAGNOSTIC_MODE=false
DIAGNOSTIC_SLIPPAGE_BPS=500  # Slippage for diagnostic mode (separate from SLIPPAGE_BPS)

# Logging
LOG_LEVEL=INFO
